    android:layout_height="match_parent"  
    android:baselineAligned="false">
    
    <fragment
        android:id="@+id/messageFragement"
        android:name="co.stayzeal.contact.MessageFragment"
        android:layout_width="0dip"  
        android:layout_height="match_parent"  
        android:layout_weight="1"
        />
    <fragment
        android:id="@+id/historyFragement"
        android:name="co.stayzeal.contact.CallLogFragment"
        android:layout_width="0dip"  
        android:layout_height="match_parent"  
        android:layout_weight="1"
        />
</LinearLayout>
