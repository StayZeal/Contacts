<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <ImageView 
        android:id="@+id/contact_activity_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:background="@drawable/avatar_default_68h"
        />
    <TextView
        android:id="@+id/contact_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_activity_icon"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:text="名字"
        />
    <TextView
        android:id="@+id/contact_activity_text_phone_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contact_activity_eidt_phone_1"
        android:layout_below="@id/contact_activity_icon"
        android:layout_marginLeft="10dp"
        android:text="手机号码：" />

    <EditText
        android:id="@+id/contact_activity_eidt_phone_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_activity_icon"
        android:layout_toRightOf="@id/contact_activity_text_phone_1"
        android:layout_alignParentRight="true"
        android:inputType="phone"
        android:ems="10" 
        />

    <TextView
        android:id="@+id/contact_activity_text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contact_activity_edit_email"
        android:layout_below="@id/contact_activity_text_phone_1"
        android:layout_marginLeft="10dp"
        android:text="电子邮箱 ：" />

    <EditText
        android:id="@+id/contact_activity_edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/contact_activity_eidt_phone_1"
        android:layout_toRightOf="@+id/contact_activity_text_phone_1"
        android:ems="10"
        android:inputType="textEmailAddress" />

</RelativeLayout>
        
 
