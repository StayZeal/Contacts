<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <ImageView 
        android:id="@+id/contact_activity_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />
    <TextView
        android:id="@+id/contact_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_activity_icon"
        />
    <TextView
        android:id="@+id/contact_activity_text_phone_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contact_activity_eidt_phone_1"
        android:layout_below="@id/contact_activity_icon"
        android:text="手机号码：" />

    <EditText
        android:id="@+id/contact_activity_eidt_phone_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_activity_icon"
        android:layout_toRightOf="@id/contact_activity_text_phone_1"
        android:layout_alignParentRight="true"
        android:inputType="phone"
        android:ems="10" 
        />
    <TextView
        android:id="@+id/contact_activity_text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/contact_activity_text_phone_1"
        android:text="电子邮箱 ："
        />
    <EditText
        android:id="@+id/contact_activity_edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_activity_edit_email"
        android:layout_below="@id/contact_activity_eidt_phone_1"
        android:inputType="textEmailAddress"
        android:layout_alignParentRight="true" 
        android:ems="10"
        />


</RelativeLayout>
        
 
